<?xml version="1.0" ?>
<sdf version="1.7">
  <world name="simple_world">
    <!-- World configurations like lighting and physics will be added here -->
    <light type="directional" name="sun">
        <cast_shadows>true</cast_shadows>
        <pose>0 0 10 0 0 0</pose>
        <diffuse>0.8 0.8 0.8 1</diffuse>
        <specular>0.2 0.2 0.2 1</specular>
        <attenuation>
          <range>1000</range>
          <constant>0.9</constant>
          <linear>0.01</linear>
          <quadratic>0.001</quadratic>
        </attenuation>
        <direction>-0.5 0.1 -0.9</direction>
    </light>

    <!-- Include the ground plane model from the models directory -->
    <include>
      <uri>../models/ground_plane</uri>
    </include>
    <include>
      <uri>../models/my_robot</uri>
    </include>
  </world>
</sdf>
